{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "VM Name"
            }
        },
        "customUri": {
            "type": "string",
            "metadata": {
                "description": "Uri for MOF file"
            }
        },
        "networkName": {
            "type": "string",
            "defaultValue": "ra-sap-hana-vnet",
            "metadata": {
                "description": "The Hana vNet"
            }
        },
        "addressPrefixes": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "The Hana vNET prefix"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "SAPDataSubnet",
            "metadata": {
                "description": "The Hana subnet name"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.5.0/24",
            "metadata": {
                "description": "The data subnet"
            }
        },
        "AzureDscUri": {
            "type": "string",
            "metadata": {
                "description": "Uri for Azure Automation DSC"
            }
        },
        "AzureDscKey": {
            "type": "string",
            "metadata": {
                "description": "Key for Azure Automation DSC"
            }
        },
        "DscConfigName": {
            "type": "string",
            "metadata": {
                "description": "Name of AzureAutomation Config"
            }
        }
    },
    "variables": {
        "api-version": "2017-06-01",
        "api-version-vm": "2017-03-30",
        "vmName": "[parameters('vmName')]",
        "vmSize": "Standard_E64S_V3",
        "vmUserName": "testuser",
        "vmPassword": "AweS0me@PW",
        "mode": "Push",
        "nicName": "[parameters('vmName')]",
        "imagePublisher": "SUSE",
        "imageOffer": "SLES-SAP",
        "suseOSVersion": "12-SP2",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('networkName'))]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('subnetName'))]"

    },
    "resources": [{
            "apiVersion": "[variables('api-version')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('vmName')]"
                }
            }
        },
       
        {
            "apiVersion": "[variables('api-version')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('vmName'))]"
            ],
            "properties": {
                "ipConfigurations": [{
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('vmName'))]"
                        }
                    }
                }]
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'),'-shared')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 511
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'),'-sap')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 63
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'),'-backup')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 1023
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'),'-data1')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 511
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(variables('vmName'),'-data2')]",
            "apiVersion": "[variables('api-version-vm')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 511
            }
        },
        {
            "apiVersion": "[variables('api-version-vm')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-shared'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-sap'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-backup'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-data1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-data2'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[variables('vmUserName')]",
                    "adminPassword": "[variables('vmPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('suseOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [{
                            "lun": 0,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-shared'))]"
                            }
                        },
                        {
                            "lun": 1,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-sap'))]"
                            }
                        },
                        {
                            "lun": 2,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-backup'))]"
                            }
                        },
                        {
                            "lun": 3,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-data1'))]"
                            }
                        },
                        {
                            "lun": 4,
                            "createOption": "attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(variables('vmName'),'-data2'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [{
                        "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                    }]
                }
            },
            "resources": [{
                "name": "scriptextension",
                "type": "extensions",
                "location": "[resourceGroup().location]",
                "apiVersion": "[variables('api-version-vm')]",
                "dependsOn": [
                    "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'))]"
                ],
                "properties": {
                    "publisher": "Microsoft.Azure.Extensions",
                    "type": "CustomScript",
                    "typeHandlerVersion": "2.0",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                        "fileUris": [
                            "[parameters('customUri')]"
                        ],
                        "commandToExecute": "[concat('sh preReqInstall.sh ', parameters('AzureDscKey'), ' ' , parameters('AzureDscUri'), ' ', parameters('DscConfigName'))]"
                    }
                }
            }]
        }
    ],
    "outputs": {}
}